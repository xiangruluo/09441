<!--弹出登录框 -->
<div id="login" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="flase">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="false">&times;</button>
        <h5 id="myLogin">会员登录</h5>
    </div>
    <form class="form-horizontal">
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label" for="inputEmail">邮箱</label>
                <div class="controls">
                    <input type="email" id="inputEmail" placeholder="请输入邮箱" required>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword">密码</label>
                <div class="controls">
                    <input type="password" id="inputPassword" placeholder="请输入密码" required>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-success">登录</button>&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="/register">您还没有注册？</a>
                </div>
            </div>
        </div>
    </form>
</div>